<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BiciAppGeoPF.Views.ChangePassword"
             BackgroundColor="#48416B">
    <ContentPage.Content>
        <StackLayout Padding="16">
            <Label Text="Cambiar Contraseña"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                   FontSize="Large"
                   TextColor="LightBlue" />
            <Entry Placeholder="Nueva contraseña"
                   x:Name="TxtPassword"
                   IsPassword="True"
                   PlaceholderColor="#7D74AB"
                   BackgroundColor="#5E548B"
                   Margin="3,0,3,0"></Entry>
            <Entry Placeholder="Confirma contraseña"
                   x:Name="TxtConfirm"
                   IsPassword="True"
                   PlaceholderColor="#7D74AB"
                   BackgroundColor="#5E548B"
                   Margin="3,0,3,0"></Entry>
            <Button Text="Guardar contraseña" x:Name="BtnChangePassword"
                    Clicked="BtnChangePassword_Clicked"
                    TextColor="White"
                    Margin="3,4,3,0"></Button>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>