<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BiciAppGeoPF.Views.Groups.GroupsDetails"
             Title="Detalle del Grupo">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Agregar Miembro"
                     x:Name="AgresarUsuario">
        </ToolbarItem>

    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            
            <Label x:Name="LabelName"
                   FontSize="Medium"
                   VerticalOptions="Center" 
                HorizontalOptions="Center"/>
            <Label Text="InTegrantes"/>

            <Button Text="Ver locación"
                    x:Name="ButtonGeo"
                    Clicked="ButtonGeo_Clicked"
                    CornerRadius="30"
                    Margin="6,20,6,7"
                    BackgroundColor="#48416B"
                    TextColor="White"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>