<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BiciAppGeoPF.Views.ForgotPasswordPage"
             BackgroundColor="#48416B">
    <ContentPage.Content>
        <StackLayout Padding="15"
                     VerticalOptions="Center"
                     Margin="10,0,10,0">
            <Label Text="Olvidaste tu contraseña?"
                   FontSize="Large"
                   VerticalOptions="Center"
                   HorizontalOptions="Center" TextColor="LightBlue"></Label>
            <Entry Placeholder="Ingresa un Correo"
                   x:Name="TxtEmail"
                   PlaceholderColor="#7D74AB"
                   BackgroundColor="#5E548B" Margin="3,0,3,0"></Entry>
            <Button Text="Enviar"
                    x:Name="ButtonSendLink"
                    Clicked="ButtonSendLink_Clicked"
                    CornerRadius="30"
                    BackgroundColor="#332D51"
                    TextColor="White" Margin="3,4,3,0"></Button>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>