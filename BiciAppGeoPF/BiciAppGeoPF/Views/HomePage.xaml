<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BiciAppGeoPF.Views.HomePage" NavigationPage.HasBackButton="False">
    <ContentPage.Content>
        <StackLayout Padding="16">
            <Label Text="Ciclismo"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                   FontSize="Large"/>
            <Label Text="" x:Name="LblUser"
                   FontSize="Large"
                   VerticalOptions="Center"></Label>
            <Button Text="Mis Grupos"
                    x:Name="BtnStudentList"
                    Clicked="BtnStudentList_Clicked" CornerRadius="15"></Button>
            <Button Text="Cambiar contraseña" 
                    x:Name="BtnChangePassword" 
                    Clicked="BtnChangePassword_Clicked" CornerRadius="15"></Button>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>