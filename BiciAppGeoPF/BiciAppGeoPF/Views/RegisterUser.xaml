<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BiciAppGeoPF.Views.RegisterUser">
    <ContentPage.Content>
        <StackLayout Padding="15">
            <Label Text="Registro"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                   FontSize="Large"/>
            <Entry Placeholder="Nombre"
                   x:Name="TxtName"></Entry>
            <Entry Placeholder="Apellido"
                   x:Name="TxtLastName"></Entry>
            <Entry Placeholder="Correo"
                   x:Name="TxtEmail"></Entry>
            <Entry Placeholder="Contraseña"
                   IsPassword="True"
                   x:Name="TxtPassword"></Entry>
            <Entry Placeholder="Confirma contraseña"
                   IsPassword="True"
                   x:Name="TxtConfirmPassword"></Entry>
            <Button Text="Registrarse" x:Name="ButtonRegister"
                    Clicked="Register_button" CornerRadius="15"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>